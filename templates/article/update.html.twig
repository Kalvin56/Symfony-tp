{% extends 'base.html.twig' %}

{% block title %}Article Edit{% endblock %}

{% block body %}

<a href="/article">Retour</a>

 {{ form_start(articleForm) }}
    <div class="form-group">
        <label for="article_title">Titre de l'article</label>
        {{ form_widget(articleForm.title) }}
