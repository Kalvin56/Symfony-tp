            {{ form_errors(articleForm.content) }}
        </small>
    </div>

    <div class="form-group">
        <label for="article_title">Auteur de l'article</label>
        {{ form_widget(articleForm.author) }}
        <small class="text-danger">
            {{ form_errors(articleForm.author) }}
        </small>
    </div>

    <div class="form-group">
        <label for="article_title">Cat√©gorie de l'article</label>
        {{ form_widget(articleForm.category) }}
        <small class="text-danger">
            {{ form_errors(articleForm.category) }}
        </small>
    </div>

