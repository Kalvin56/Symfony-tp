{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}

<a href="/article">Retour</a>

<h1 data-id="{{ article.id }}">{{ article.title }}</h1>

<table class="table">
    <thead>
        <tr>
        <th scope="col">Title</th>
        <th scope="col">Content</th>
        <th scope="col">Created_at</th>
        <th scope="col">Author</th>
        <th scope="col">Editer</th>
        <th scope="col">Supprimer</th>
        </tr>
    </thead>
    <tbody>
            <tr>
                <th scope="row">{{article.title}}</th>
                <td>{{article.content}}{{article.content}}</td>
                <td>{{article.createdAt | date('d/m/Y')}}</td>
                <td>{{article.author}}</td>
                <td><a href="{{path('article.edit', {id : article.id})}}">Editer</a></td>
                <td>
                    <form action="{{path('article.delete', {id : article.id})}}" onsubmit="return confirm('Etes-vous s√ªr de supprimer cet article ?')">
                        <input type="hidden" name="token" value="{{ csrf_token('delete-item') }}">
                        <input type="hidden" name="_method" value="DELETE">
                        <input type="submit" value="Supprimer">
                    </form>
                <td>
            </tr>
        </tr>
        <div class="mt-3">
            <button id="decrement" class="btn btn-outline-dark btn-lg">üëé</button>
            <strong class="p-5">
                <span id="likes">{{ article.likes }}</span>
                {{ article.likes <= 1  ? 'like' : 'likes' }}
            </strong>
            <button id="increment" class="btn btn-outline-dark btn-lg">üëç</button>
        </div>
    </tbody>
</table>
{% endblock %}

{% javascripts %}
const id = document.querySelector("h1").getAttribute("data-id");
const likes = document.querySelector("#likes");
const increment = document.querySelector("#increment");
const url = `/article/${id}/like`;

increment.addEventListener("click", () => {
    increment.disabled = true;

    fetch(url)
        .then(res => res.json())
        .then(res => {
            likes.textContent = res.likes;
            increment.disabled = false;
        });
});
{% javascripts %}
