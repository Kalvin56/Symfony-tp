{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}

<a href="/article">Retour</a>

<table class="table">
    <thead>
        <tr>
        <th scope="col">Title</th>
        <th scope="col">Content</th>
        <th scope="col">Created_at</th>
        <th scope="col">Author</th>
        <th scope="col">Editer</th>
        <th scope="col">Supprimer</th>
        </tr>
    </thead>
    <tbody>
            <tr>
                <th scope="row">{{article.title}}</th>
                <td>{{article.content}}{{article.content}}</td>
                <td>{{article.createdAt | date('d/m/Y')}}</td>
                <td>{{article.author}}</td>
                <td><a href="{{path('article.edit', {id : article.id})}}">Editer</a></td>
                <td>
                    <form action="{{path('article.delete', {id : article.id})}}" onsubmit="return confirm('Etes-vous sÃ»r de supprimer cet article ?')">
                        <input type="hidden" name="token" value="{{ csrf_token('delete-item') }}">
                        <input type="hidden" name="_method" value="DELETE">
                        <input type="submit" value="Supprimer">
                    </form>
                <td>
            </tr>
        </tr>
    </tbody>
</table>
{% endblock %}
